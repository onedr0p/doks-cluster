{
  "enabled": true,
  "timezone": "America/New_York",
  "semanticCommits": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitMessageSuffix": "[ci-skip]",
  "commitBody": "Signed-off-by: Devin Buhl <onedr0p@users.noreply.github.com>",
  // Do not notify on closed unmerged PRs
  "suppressNotifications": ["prIgnoreNotification"],
  "assignees": ["@onedr0p"],
  "kubernetes": {
    "fileMatch": ["cluster/namespaces/.+\\.yaml$"],
    "ignorePaths": [
      "cluster/namespaces/flux-system/",
      "cluster/namespaces/actions-runner-system/"
    ]
  },
  "helm-values": {
    "fileMatch": ["cluster/namespaces/.+helmrelease\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["cluster/namespaces/.+helmrelease\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["cluster/core/.+crds\\.yaml$"],
      "matchStrings": [
        // depName not needed
        "url: (?<registryUrl>.*?)\n *ref: (?<depName>.*?)\n *tag: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    // Setup datasources
    {
      "datasources": ["helm"],
      "separateMinorPatch": true
    },
    // Global docker datasource settings
    {
      "datasources": ["docker"],
      "enabled": true,
      "updateTypes": ["major", "minor", "patch"],
      "separateMinorPatch": true
    },
    // Add labels according to package and update types
    {
      "datasources": ["docker"],
      "updateTypes": ["major"],
      "labels": ["renovate/image-release", "dependency/major"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["minor"],
      "labels": ["renovate/image-release", "dependency/minor"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["patch"],
      "labels": ["renovate/image-release", "dependency/patch"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["major"],
      "labels": ["renovate/helm-release", "dependency/major"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["minor"],
      "labels": ["renovate/helm-release", "dependency/minor"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["patch"],
      "labels": ["renovate/helm-release", "dependency/patch"]
    },
    // Custom version schemes
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>.*)$",
      "packageNames": ["blakeblackshear/frigate"]
    },
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})",
      "packageNames": ["minio/minio"]
    },
    // Pin package versions
    {
      "datasources": ["docker"],
      "allowedVersions": "<13",
      "packageNames": [
        "postgres",
        "prodrigestivill/postgres-backup-local"
      ]
    },
    {
      "datasources": ["helm"],
      "allowedVersions": "<=13.2.0",
      "packageNames": ["kube-prometheus-stack"]
    },
    {
      "datasources": ["galaxy"],
      "allowedVersions": "<2",
      "packageNames": ["xanmanning.k3s"]
    },
    // Version strategies
    {
      "datasources": ["docker"],
      "versioning": "loose",
      "packageNames": ["plexinc/pms-docker"]
    },
    // Enable auto-merge
    {
      "datasources": ["docker"],
      "automerge": true,
      "requiredStatusChecks": null,
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "k8sathome/ombi",
        "k8sathome/jackett"
      ]
    }
  ]
}
